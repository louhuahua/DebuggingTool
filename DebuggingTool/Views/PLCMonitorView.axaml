<UserControl
    x:Class="DebuggingTool.Views.PLCMonitorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="https://github.com/projektanker/icons.avalonia"
    xmlns:lang="clr-namespace:DebuggingTool.Assets.Lang"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:vm="clr-namespace:DebuggingTool.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:CompileBindings="True"
    x:DataType="vm:PLCMonitorViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <suki:PropertyGridTemplateSelector x:Key="PropertyGridTemplateSelector" UseSukiHost="True" />
    </UserControl.Resources>
    <ScrollViewer>
        <TabControl Classes="HorizontalTabs" TabStripPlacement="Left">
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="50"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <ic:Icon FontSize="25" Value="mdi-monitor-dashboard" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="5,10">
                        <TextBox
                            Margin="20,0"
                            HorizontalAlignment="Stretch"
                            Watermark="IP" />
                        <Panel Margin="20,0" HorizontalAlignment="Stretch">
                            <ComboBox
                                Width="110"
                                Margin="-5,-5,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top" />
                            <TextBox
                                Width="80"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Right"
                                Watermark="DbBlock" />
                        </Panel>
                        <Panel Margin="20,0" HorizontalAlignment="Stretch">
                            <TextBox
                                Width="80"
                                HorizontalAlignment="Left"
                                Watermark="Rack" />
                            <TextBox
                                Width="80"
                                HorizontalAlignment="Right"
                                Watermark="Slot" />
                        </Panel>

                        <ScrollViewer>
                            <DataGrid
                                Margin="0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">

                                <DataGrid.Styles>
                                    <Style Selector="DataGridRowGroupHeader">
                                        <Setter Property="IsItemCountVisible" Value="True" />
                                    </Style>
                                </DataGrid.Styles>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" />
                                    <DataGridTextColumn Header="Address" />
                                    <DataGridTextColumn Header="Action" />
                                </DataGrid.Columns>

                            </DataGrid>

                        </ScrollViewer>


                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="50"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <ic:Icon FontSize="25" Value="mdi-database-edit-outline" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content />
            </TabItem>
        </TabControl>
    </ScrollViewer>
</UserControl>
