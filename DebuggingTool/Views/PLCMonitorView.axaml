<UserControl
    x:Class="DebuggingTool.Views.PLCMonitorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:DebuggingTool.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:ic="https://github.com/projektanker/icons.avalonia"
    xmlns:lang="clr-namespace:DebuggingTool.Assets.Lang"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:vm="clr-namespace:DebuggingTool.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:CompileBindings="True"
    x:DataType="vm:PLCMonitorViewModel"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <ia:EventTriggerBehavior EventName="Loaded">
            <ia:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </ia:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <UserControl.Resources />
    <ScrollViewer>
        <TabControl Classes="HorizontalTabs" TabStripPlacement="Left">
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="50"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <ic:Icon FontSize="25" Value="mdi-monitor-dashboard" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="0,10,20,0">
                        <Panel Margin="0,0,0,0" HorizontalAlignment="Stretch">
                            <TextBox
                                Width="100"
                                HorizontalAlignment="Left"
                                Text="{Binding EditingConfig.Name}"
                                Watermark="Name" />
                            <TextBox
                                Width="100"
                                HorizontalAlignment="Right"
                                Text="{Binding EditingConfig.Ip}"
                                Watermark="Ip" />
                        </Panel>
                        <Panel Margin="0,0,0,0" HorizontalAlignment="Stretch">
                            <ComboBox
                                Width="110"
                                Margin="-5,-5,0,0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top" />
                            <TextBox
                                Width="80"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Right"
                                Text="{Binding EditingConfig.DBNumber}"
                                Watermark="DbBlock" />
                        </Panel>
                        <Panel Margin="0,0,0,0" HorizontalAlignment="Stretch">
                            <TextBox
                                Width="80"
                                HorizontalAlignment="Left"
                                Text="{Binding EditingConfig.Rack}"
                                Watermark="Rack" />
                            <TextBox
                                Width="80"
                                HorizontalAlignment="Right"
                                Text="{Binding EditingConfig.Slot}"
                                Watermark="Slot" />
                        </Panel>

                        <ScrollViewer>
                            <DataGrid
                                x:Name="PLCDataGrid"
                                Margin="0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                behaviors:DoubleClickBehavior.Command="{Binding ReplaceCommand}"
                                IsReadOnly="True"
                                ItemsSource="{Binding Configs}"
                                SelectedItem="{Binding SelectedConfig,Mode=OneWayToSource}">

                                <DataGrid.Styles>
                                    <Style Selector="DataGridRowGroupHeader">
                                        <Setter Property="IsItemCountVisible" Value="True" />
                                    </Style>
                                </DataGrid.Styles>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                                    <DataGridTextColumn Binding="{Binding Ip}" Header="Address" />
                                    <DataGridTextColumn Header="Action" />
                                </DataGrid.Columns>

                            </DataGrid>

                        </ScrollViewer>


                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="50"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <ic:Icon FontSize="25" Value="mdi-database-edit-outline" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content />
            </TabItem>
        </TabControl>
    </ScrollViewer>
</UserControl>
