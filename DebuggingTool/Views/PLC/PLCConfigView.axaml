<UserControl
    x:Class="DebuggingTool.Views.PLCConfigView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:DebuggingTool.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:ic="https://github.com/projektanker/icons.avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:vm="clr-namespace:DebuggingTool.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:CompileBindings="True"
    x:DataType="vm:PLCConfigViewModel"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <ia:EventTriggerBehavior EventName="Loaded">
            <ia:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </ia:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <UserControl.Resources />
    <StackPanel Margin="0,10,20,0">
        <Panel Margin="0,0,0,0" HorizontalAlignment="Stretch">
            <TextBox
                Width="120"
                HorizontalAlignment="Left"
                Text="{Binding EditingConfig.Name}"
                Watermark="Name" />
            <TextBox
                Width="120"
                HorizontalAlignment="Right"
                Text="{Binding EditingConfig.Ip}"
                Watermark="Ip" />
        </Panel>
        <Panel Margin="0,0,0,0" HorizontalAlignment="Stretch">
            <ComboBox
                Width="130"
                Margin="-5,-5,0,0"
                Padding="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ItemsSource="{Binding CpuTypes}"
                SelectedItem="{Binding SelectedConfig.CpuType}" />

            <TextBox
                Width="55"
                Margin="0,0,65,0"
                HorizontalAlignment="Right"
                Text="{Binding EditingConfig.Port}"
                Watermark="Port" />

            <TextBox
                Width="55"
                Margin="0,0,0,0"
                HorizontalAlignment="Right"
                Text="{Binding EditingConfig.DBNumber}"
                Watermark="DbBlock" />
        </Panel>
        <Panel Margin="0,0,0,0" HorizontalAlignment="Stretch">
            <TextBox
                Width="80"
                HorizontalAlignment="Left"
                Text="{Binding EditingConfig.Rack}"
                Watermark="Rack" />
            <TextBox
                Width="80"
                HorizontalAlignment="Center"
                Text="{Binding EditingConfig.Slot}"
                Watermark="Slot" />
            <TextBox
                Width="80"
                HorizontalAlignment="Right"
                Text="{Binding EditingConfig.IntervalMs}"
                Watermark="IntervalMs" />
        </Panel>

        <Panel Margin="0,20,0,0" HorizontalAlignment="Stretch">
            <Button
                Width="40"
                Margin="50,0,0,0"
                Padding="2"
                HorizontalAlignment="Left"
                ic:Attached.Icon="mdi-plus-thick"
                Classes="Flat Icon"
                Command="{Binding AddCommand}"
                FontSize="30" />
            <Button
                Width="40"
                Margin="0,0,50,0"
                Padding="2"
                HorizontalAlignment="Right"
                ic:Attached.Icon="mdi-content-save-edit"
                Classes="Flat Icon"
                Command="{Binding EditCommand}"
                FontSize="30" />
        </Panel>

        <ScrollViewer>
            <DataGrid
                x:Name="PLCConfigGrid"
                Margin="0,30,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                behaviors:DoubleClickBehavior.Command="{Binding ReplaceCommand}"
                IsReadOnly="True"
                ItemsSource="{Binding Configs}"
                SelectedItem="{Binding SelectedConfig, Mode=OneWayToSource}">
                <DataGrid.Styles>
                    <Style Selector="DataGridRowGroupHeader">
                        <Setter Property="IsItemCountVisible" Value="True" />
                    </Style>
                </DataGrid.Styles>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Ip}" Header="Address" />
                    <DataGridTemplateColumn Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Width="40"
                                    Margin="0,0,40,0"
                                    Padding="0"
                                    HorizontalAlignment="Center"
                                    ic:Attached.Icon="mdi-delete-forever"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.RemoveCommand, ElementName=PLCConfigGrid}"
                                    CommandParameter="{Binding}"
                                    FontSize="25"
                                    Foreground="Orange" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

        </ScrollViewer>


    </StackPanel>
</UserControl>
