<UserControl
    x:Class="DebuggingTool.Views.PLCMonitorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:DebuggingTool.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:ic="https://github.com/projektanker/icons.avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:vm="clr-namespace:DebuggingTool.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:CompileBindings="True"
    x:DataType="vm:PLCMonitorViewModel"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <ia:EventTriggerBehavior EventName="Loaded">
            <ia:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </ia:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <StackPanel Margin="0,10,20,0">

        <ComboBox
            Width="180"
            Margin="-5,-5,0,0"
            Padding="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            DisplayMemberBinding="{Binding Name}"
            ItemsSource="{Binding Configs}"
            SelectedItem="{Binding SelectedConfig}" />

        <Button
            ic:Attached.Icon="mdi-plus-thick"
            BorderThickness="0"
            FontSize="25" />

        <ScrollViewer>
            <DataGrid
                x:Name="PLCMonitorGrid"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsReadOnly="True"
                ItemsSource="{Binding MonitorItems}"
                SelectedItem="{Binding SelectedMonitorItem, Mode=OneWayToSource}">
                <DataGrid.Styles>
                    <Style Selector="DataGridRowGroupHeader">
                        <Setter Property="IsItemCountVisible" Value="True" />
                    </Style>
                </DataGrid.Styles>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding FullAddress}" Header="Address" />
                    <DataGridTextColumn Binding="{Binding FullAddress}" Header="Value" />
                </DataGrid.Columns>

            </DataGrid>

        </ScrollViewer>

    </StackPanel>

</UserControl>
