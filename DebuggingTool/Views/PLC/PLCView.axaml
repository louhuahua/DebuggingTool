<UserControl
    x:Class="DebuggingTool.Views.PLCView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:DebuggingTool.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:ic="https://github.com/projektanker/icons.avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:view="clr-namespace:DebuggingTool.Views"
    xmlns:vm="clr-namespace:DebuggingTool.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:CompileBindings="True"
    x:DataType="vm:PLCViewModel"
    mc:Ignorable="d">
    <ScrollViewer>
        <TabControl Classes="HorizontalTabs" TabStripPlacement="Left">
            <i:Interaction.Behaviors>
                <ia:EventTriggerBehavior EventName="SelectionChanged">
                    <ia:InvokeCommandAction Command="{Binding ChangeTabCommand}" />
                </ia:EventTriggerBehavior>
            </i:Interaction.Behaviors>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="50"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <ic:Icon FontSize="25" Value="mdi-monitor-dashboard" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <view:PLCMonitorView />
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="50"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <ic:Icon FontSize="25" Value="mdi-database-edit-outline" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <view:PLCConfigView />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </ScrollViewer>
</UserControl>
